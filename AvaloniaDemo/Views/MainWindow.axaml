<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaDemo.ViewModels"
        xmlns:models="using:AvaloniaDemo.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="720"
        x:Class="AvaloniaDemo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="✨ Avalonia UI Demo"
        Width="1200" Height="720" MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="6,2"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#4C1D95"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#1F2937"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="220,*">

        <!-- ── Sidebar ── -->
        <Border Grid.Column="0" Background="#111827"
                BorderBrush="#1F2937" BorderThickness="0,0,1,0">
            <DockPanel>

                <!-- Logo / Title -->
                <Border DockPanel.Dock="Top" Padding="20,22,20,18"
                        BorderBrush="#1F2937" BorderThickness="0,0,0,1">
                    <StackPanel Spacing="4">
                        <TextBlock Text="✨ Avalonia Demo"
                                   FontSize="17" FontWeight="Bold"
                                   Foreground="#A78BFA"/>
                        <TextBlock Text=".NET 8  ·  Avalonia UI 11"
                                   FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" Padding="20,14"
                        BorderBrush="#1F2937" BorderThickness="0,1,0,0">
                    <TextBlock Text="v1.0.0  ·  Demo App"
                               FontSize="11" Foreground="#374151"/>
                </Border>

                <!-- Nav Items -->
                <StackPanel Margin="0,14,0,0">
                    <TextBlock Text="NAVIGATION" Margin="20,0,0,8"
                               FontSize="10" Foreground="#4B5563"
                               FontWeight="SemiBold" LetterSpacing="2"/>
                    <ListBox ItemsSource="{Binding NavItems}"
                             SelectedItem="{Binding SelectedNavItem}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:NavItem">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding Icon}" FontSize="18"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" FontSize="14"
                                               FontWeight="Medium" Foreground="#D1D5DB"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- ── Content ── -->
        <Border Grid.Column="1" Background="#0F172A">
            <ContentControl Content="{Binding CurrentPage}"/>
        </Border>

    </Grid>
</Window>
