<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaDemo.ViewModels"
             xmlns:models="using:AvaloniaDemo.Models"
             x:Class="AvaloniaDemo.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background"   Value="#1E293B"/>
            <Setter Property="Padding"      Value="20"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="32,28" Spacing="24">

            <!-- Page Header -->
            <StackPanel Spacing="4">
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#F1F5F9"/>
                <TextBlock Text="Overview of key metrics and recent activity"
                           FontSize="14" Foreground="#64748B"/>
            </StackPanel>

            <!-- Stat Cards -->
            <Grid ColumnDefinitions="*,*,*,*">

                <Border Grid.Column="0" Classes="card" Margin="0,0,12,0">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ‘¥" FontSize="22"/>
                            <TextBlock Text="Total Users" FontSize="12" Foreground="#94A3B8"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalUsers, StringFormat='{}{0:N0}'}"
                                   FontSize="34" FontWeight="Bold" Foreground="#A78BFA"/>
                        <TextBlock Text="â†‘ 12% from last month" FontSize="12" Foreground="#22D3EE"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card" Margin="0,0,12,0">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="âš¡" FontSize="22"/>
                            <TextBlock Text="Active Sessions" FontSize="12" Foreground="#94A3B8"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ActiveSessions}"
                                   FontSize="34" FontWeight="Bold" Foreground="#34D399"/>
                        <TextBlock Text="â†‘ 5% from yesterday" FontSize="12" Foreground="#22D3EE"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Classes="card" Margin="0,0,12,0">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ’°" FontSize="22"/>
                            <TextBlock Text="Revenue" FontSize="12" Foreground="#94A3B8"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Revenue}"
                                   FontSize="34" FontWeight="Bold" Foreground="#F59E0B"/>
                        <TextBlock Text="â†‘ 8% from last week" FontSize="12" Foreground="#22D3EE"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Classes="card">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ›" FontSize="22"/>
                            <TextBlock Text="Open Issues" FontSize="12" Foreground="#94A3B8"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding OpenIssues}"
                                   FontSize="34" FontWeight="Bold" Foreground="#F87171"/>
                        <TextBlock Text="â†“ 3 resolved today" FontSize="12" Foreground="#22D3EE"/>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- Recent Activity -->
            <Border Classes="card" Padding="0">
                <StackPanel>
                    <Border Padding="20,16"
                            BorderBrush="#334155" BorderThickness="0,0,0,1">
                        <TextBlock Text="Recent Activity"
                                   FontSize="16" FontWeight="SemiBold" Foreground="#F1F5F9"/>
                    </Border>

                    <ItemsControl ItemsSource="{Binding RecentActivity}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:ActivityItem">
                                <Border Padding="20,13"
                                        BorderBrush="#1E293B" BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="56,30,*">
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Time}"
                                                   FontSize="12" Foreground="#475569"
                                                   FontFamily="Consolas, Monospace"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding TypeIcon}"
                                                   FontSize="15"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Action}"
                                                   FontSize="13" Foreground="#CBD5E1"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
