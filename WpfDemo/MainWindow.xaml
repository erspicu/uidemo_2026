<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfDemo.Views"
        Title="âœ¨ WPF Demo" Width="1200" Height="720"
        MinWidth="800" MinHeight="500"
        Background="#0F172A"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Nav button style -->
        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding"          Value="12,10"/>
            <Setter Property="Margin"           Value="6,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1F2937"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Selected nav style -->
        <Style x:Key="NavBtnSelected" TargetType="Button" BasedOn="{StaticResource NavBtn}">
            <Setter Property="Background" Value="#4C1D95"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â”€â”€ Sidebar â”€â”€ -->
        <Border Grid.Column="0" Background="#111827"
                BorderBrush="#1F2937" BorderThickness="0,0,1,0">
            <DockPanel>

                <!-- Header -->
                <Border DockPanel.Dock="Top" Padding="20,22,20,18"
                        BorderBrush="#1F2937" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="âœ¨ WPF Demo"
                                   FontSize="17" FontWeight="Bold"
                                   Foreground="#A78BFA"/>
                        <TextBlock Text=".NET 8  Â·  WPF"
                                   FontSize="11" Foreground="#6B7280" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" Padding="20,14"
                        BorderBrush="#1F2937" BorderThickness="0,1,0,0">
                    <TextBlock Text="v1.0.0  Â·  Demo App"
                               FontSize="11" Foreground="#374151"/>
                </Border>

                <!-- Nav -->
                <StackPanel Margin="0,14,0,0">
                    <TextBlock Text="NAVIGATION" Margin="20,0,0,8"
                               FontSize="10" Foreground="#4B5563" FontWeight="SemiBold"/>

                    <Button x:Name="BtnDashboard" Style="{StaticResource NavBtnSelected}"
                            Click="Nav_Click" Tag="Dashboard">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="ðŸ " Margin="0,0,12,0" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Dashboard" FontSize="14" FontWeight="Medium"
                                       Foreground="#D1D5DB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnControls" Style="{StaticResource NavBtn}"
                            Click="Nav_Click" Tag="Controls">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="ðŸŽ›ï¸" Margin="0,0,12,0" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Controls" FontSize="14" FontWeight="Medium"
                                       Foreground="#D1D5DB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnAnimation" Style="{StaticResource NavBtn}"
                            Click="Nav_Click" Tag="Animation">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="âœ¨" Margin="0,0,12,0" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Animation" FontSize="14" FontWeight="Medium"
                                       Foreground="#D1D5DB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnData" Style="{StaticResource NavBtn}"
                            Click="Nav_Click" Tag="Data">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="ðŸ“Š" Margin="0,0,12,0" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Data Grid" FontSize="14" FontWeight="Medium"
                                       Foreground="#D1D5DB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- â”€â”€ Content â”€â”€ -->
        <Border Grid.Column="1" Background="#0F172A">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>

    </Grid>
</Window>
