<Page x:Class="WpfDemo.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:WpfDemo.Models"
      Background="#0F172A" Title="Dashboard">

    <Page.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"    Value="#1E293B"/>
            <Setter Property="CornerRadius"  Value="12"/>
            <Setter Property="Padding"       Value="20"/>
        </Style>
        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
        </Style>
        <Style x:Key="BigNum" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="34"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="Trend" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="Foreground" Value="#22D3EE"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,28" >

            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#F1F5F9"/>
                <TextBlock Text="Overview of key metrics and recent activity"
                           FontSize="14" Foreground="#64748B" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Stat Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,20">
                <!-- Users -->
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ‘¥" FontSize="22" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Users" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="1,248" Style="{StaticResource BigNum}" Foreground="#A78BFA"/>
                        <TextBlock Text="â†‘ 12% from last month" Style="{StaticResource Trend}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <!-- Sessions -->
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âš¡" FontSize="22" Margin="0,0,8,0"/>
                            <TextBlock Text="Active Sessions" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="342" Style="{StaticResource BigNum}" Foreground="#34D399"/>
                        <TextBlock Text="â†‘ 5% from yesterday" Style="{StaticResource Trend}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <!-- Revenue -->
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ’°" FontSize="22" Margin="0,0,8,0"/>
                            <TextBlock Text="Revenue" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="$89,420" Style="{StaticResource BigNum}" Foreground="#F59E0B"/>
                        <TextBlock Text="â†‘ 8% from last week" Style="{StaticResource Trend}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <!-- Issues -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ›" FontSize="22" Margin="0,0,8,0"/>
                            <TextBlock Text="Open Issues" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="7" Style="{StaticResource BigNum}" Foreground="#F87171"/>
                        <TextBlock Text="â†“ 3 resolved today" Style="{StaticResource Trend}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Activity -->
            <Border Style="{StaticResource Card}" Padding="0">
                <StackPanel>
                    <Border Padding="20,16" BorderBrush="#334155" BorderThickness="0,0,0,1">
                        <TextBlock Text="Recent Activity" FontSize="16" FontWeight="SemiBold" Foreground="#F1F5F9"/>
                    </Border>
                    <ItemsControl x:Name="ActivityList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ActivityItem}">
                                <Border Padding="20,12" BorderBrush="#334155" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56"/>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Time}"
                                                   FontSize="12" Foreground="#475569"
                                                   FontFamily="Consolas" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding TypeIcon}"
                                                   FontSize="14" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Action}"
                                                   FontSize="13" Foreground="#CBD5E1"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
