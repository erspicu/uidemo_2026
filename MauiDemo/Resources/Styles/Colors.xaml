<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#7C3AED</Color>
    <Color x:Key="PrimaryDark">#A78BFA</Color>
    <Color x:Key="PrimaryDarkText">#F1F5F9</Color>
    <Color x:Key="Secondary">#334155</Color>
    <Color x:Key="SecondaryDarkText">#CBD5E1</Color>
    <Color x:Key="Tertiary">#4C1D95</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#0F172A</Color>

    <!-- Dark theme custom colors -->
    <Color x:Key="SurfaceBg">#1E293B</Color>
    <Color x:Key="PageBg">#0F172A</Color>
    <Color x:Key="SidebarBg">#111827</Color>
    <Color x:Key="TextPrimary">#F1F5F9</Color>
    <Color x:Key="TextSecondary">#94A3B8</Color>
    <Color x:Key="TextMuted">#64748B</Color>
    <Color x:Key="Accent">#A78BFA</Color>
    <Color x:Key="AccentGreen">#34D399</Color>
    <Color x:Key="AccentYellow">#F59E0B</Color>
    <Color x:Key="AccentRed">#F87171</Color>
    <Color x:Key="AccentCyan">#22D3EE</Color>
    <Color x:Key="Border">#1F2937</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush"   Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush"  Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush"     Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush"     Color="{StaticResource Black}"/>
</ResourceDictionary>