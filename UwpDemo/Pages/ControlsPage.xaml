<Page
    x:Class="UwpDemo.Pages.ControlsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Padding="32,24">

            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Controls" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="UWP native control showcase" Foreground="#9CA3AF" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Toggles & Checkboxes -->
            <Border Background="#1F2937" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Toggles &amp; Checkboxes" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,40,0">
                            <ToggleSwitch Header="Enable Notifications" IsOn="{x:Bind ViewModel.ToggleA, Mode=TwoWay}" OffContent="Off" OnContent="On"/>
                            <ToggleSwitch Header="Dark Mode" IsOn="{x:Bind ViewModel.ToggleB, Mode=TwoWay}" OffContent="Off" OnContent="On" Margin="0,8,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,40,0">
                            <CheckBox Content="Option Alpha" IsChecked="True"/>
                            <CheckBox Content="Option Beta"/>
                            <CheckBox Content="Option Gamma" IsChecked="True"/>
                        </StackPanel>
                        <StackPanel>
                            <RadioButton Content="Choice One" IsChecked="True" GroupName="demo"/>
                            <RadioButton Content="Choice Two" GroupName="demo"/>
                            <RadioButton Content="Choice Three" GroupName="demo"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Slider & Progress -->
            <Border Background="#1F2937" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Slider &amp; Progress" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <TextBlock Text="{x:Bind ViewModel.SliderLabel, Mode=OneWay}" Foreground="#9CA3AF" FontSize="13"/>
                    <Slider Value="{x:Bind ViewModel.SliderValue, Mode=TwoWay}" Minimum="0" Maximum="100" Width="400" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                    <ProgressBar Value="{x:Bind ViewModel.SliderValue, Mode=OneWay}" Maximum="100" Height="8" Width="400" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                    <ProgressBar IsIndeterminate="True" Width="400" Height="8" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                    <ProgressRing IsActive="True" Width="36" Height="36" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Input Controls -->
            <Border Background="#1F2937" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Input Controls" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBox PlaceholderText="Enter text here..." Width="200" Header="Name" Margin="0,0,12,0"/>
                        <PasswordBox PlaceholderText="Password" Width="160" Header="Password" Margin="0,0,12,0"/>
                        <TextBox PlaceholderText="0" Header="Number" Width="120" InputScope="Number"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Header="Color" SelectedIndex="{x:Bind ViewModel.SelectedColorIndex, Mode=TwoWay}" Width="160" Margin="0,0,12,0">
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="Blue"/>
                            <ComboBoxItem Content="Green"/>
                            <ComboBoxItem Content="Purple"/>
                            <ComboBoxItem Content="Orange"/>
                        </ComboBox>
                        <DatePicker Header="Pick a Date" Margin="0,0,12,0"/>
                        <TimePicker Header="Pick a Time"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="Buttons &amp; Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Primary" Background="#7C3AED" Foreground="White" Margin="0,0,12,0"/>
                        <Button Content="Default" Margin="0,0,12,0"/>
                        <Button Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE72D;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Download"/>
                            </StackPanel>
                        </Button>
                        <!-- DropDownButton equivalent using Button + Flyout -->
                        <Button Content="Options" Margin="0,0,12,0">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit"/>
                                    <MenuFlyoutItem Text="Duplicate"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Delete" Foreground="#F87171"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button Content="Send">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Send Now"/>
                                    <MenuFlyoutItem Text="Schedule..."/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
