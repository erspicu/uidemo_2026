<Page
    x:Class="UwpDemo.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:UwpDemo.Models"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Padding="32,24">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection/>
            </StackPanel.ChildrenTransitions>

            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="Welcome back! Here's what's happening." Foreground="#9CA3AF" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Stat Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#1F2937" CornerRadius="12" Padding="20" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥" FontSize="24" Margin="0,0,0,8"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalUsers}" FontSize="30" FontWeight="Bold" Foreground="#60A5FA"/>
                        <TextBlock Text="Total Users" Foreground="#9CA3AF" FontSize="13" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#1F2937" CornerRadius="12" Padding="20" Margin="8,0,8,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“" FontSize="24" Margin="0,0,0,8"/>
                        <TextBlock Text="{x:Bind ViewModel.ActiveProjects}" FontSize="30" FontWeight="Bold" Foreground="#34D399"/>
                        <TextBlock Text="Active Projects" Foreground="#9CA3AF" FontSize="13" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#1F2937" CornerRadius="12" Padding="20" Margin="8,0,8,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’°" FontSize="24" Margin="0,0,0,8"/>
                        <TextBlock Text="{x:Bind ViewModel.RevenueText}" FontSize="30" FontWeight="Bold" Foreground="#F59E0B"/>
                        <TextBlock Text="Revenue" Foreground="#9CA3AF" FontSize="13" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="#1F2937" CornerRadius="12" Padding="20" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ›" FontSize="24" Margin="0,0,0,8"/>
                        <TextBlock Text="{x:Bind ViewModel.OpenIssues}" FontSize="30" FontWeight="Bold" Foreground="#F87171"/>
                        <TextBlock Text="Open Issues" Foreground="#9CA3AF" FontSize="13" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity -->
            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.RecentActivities}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:ActivityItem">
                                <Border Background="#111827" CornerRadius="8" Padding="12" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Bind TypeIcon}" FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Time}" Foreground="#6B7280" VerticalAlignment="Center" FontSize="13"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind Action}" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
