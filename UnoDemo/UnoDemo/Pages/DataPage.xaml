<Page
    x:Class="UnoDemo.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:UnoDemo.Helpers"
    Background="Transparent">

    <Page.Resources>
        <helpers:StatusColorConverter x:Key="StatusColor"/>
    </Page.Resources>

    <StackPanel Spacing="24" Padding="32,24">
        <StackPanel>
            <TextBlock Text="Data Grid" FontSize="28" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Browse and filter tabular data" Foreground="#9CA3AF" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Background="#1F2937" CornerRadius="12" Padding="20">
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBox x:Name="SearchBox" PlaceholderText="ðŸ”  Search..." Width="320" TextChanged="SearchBox_TextChanged"/>
                    <TextBlock x:Name="CountLabel" VerticalAlignment="Center" Foreground="#9CA3AF" FontSize="13"/>
                </StackPanel>

                <Border Background="#111827" CornerRadius="8" Padding="12,8">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/><ColumnDefinition Width="1.5*"/><ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Name"       FontWeight="SemiBold" Foreground="#9CA3AF" FontSize="13"/>
                        <TextBlock Grid.Column="1" Text="Age"        FontWeight="SemiBold" Foreground="#9CA3AF" FontSize="13"/>
                        <TextBlock Grid.Column="2" Text="Department" FontWeight="SemiBold" Foreground="#9CA3AF" FontSize="13"/>
                        <TextBlock Grid.Column="3" Text="Status"     FontWeight="SemiBold" Foreground="#9CA3AF" FontSize="13"/>
                        <TextBlock Grid.Column="4" Text="Score"      FontWeight="SemiBold" Foreground="#9CA3AF" FontSize="13"/>
                    </Grid>
                </Border>

                <ItemsControl x:Name="PeopleList" ItemsSource="{Binding FilteredPeople}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1A2332" CornerRadius="6" Padding="12,10" Margin="0,0,0,4">
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/><ColumnDefinition Width="1.5*"/><ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Medium" Foreground="White"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Age}"  Foreground="#9CA3AF"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Department}" Foreground="#60A5FA"/>
                                    <Border Grid.Column="3" CornerRadius="4" Padding="8,3" HorizontalAlignment="Left"
                                            Background="{Binding Status, Converter={StaticResource StatusColor}}">
                                        <TextBlock Text="{Binding Status}" FontSize="12" Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="4" Text="{Binding ScoreText}" Foreground="#34D399" FontWeight="Medium"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
