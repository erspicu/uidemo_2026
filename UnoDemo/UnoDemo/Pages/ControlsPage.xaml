<Page
    x:Class="UnoDemo.Pages.ControlsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="32,24">
            <StackPanel>
                <TextBlock Text="Controls" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Uno Platform native control showcase" Foreground="#9CA3AF" Margin="0,4,0,0"/>
            </StackPanel>

            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Toggles &amp; Checkboxes" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="40">
                        <StackPanel Spacing="8">
                            <ToggleSwitch Header="Enable Notifications" IsOn="{Binding ToggleA, Mode=TwoWay}" OffContent="Off" OnContent="On"/>
                            <ToggleSwitch Header="Dark Mode" IsOn="{Binding ToggleB, Mode=TwoWay}" OffContent="Off" OnContent="On"/>
                        </StackPanel>
                        <StackPanel Spacing="8">
                            <CheckBox Content="Option Alpha" IsChecked="True" Foreground="White"/>
                            <CheckBox Content="Option Beta" Foreground="White"/>
                            <CheckBox Content="Option Gamma" IsChecked="True" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Spacing="8">
                            <RadioButton Content="Choice One" IsChecked="True" GroupName="demo" Foreground="White"/>
                            <RadioButton Content="Choice Two" GroupName="demo" Foreground="White"/>
                            <RadioButton Content="Choice Three" GroupName="demo" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Slider &amp; Progress" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding SliderLabel}" Foreground="#9CA3AF" FontSize="13"/>
                    <Slider Value="{Binding SliderValue, Mode=TwoWay}" Minimum="0" Maximum="100" Width="400" HorizontalAlignment="Left"/>
                    <ProgressBar Value="{Binding SliderValue}" Maximum="100" Height="8" Width="400" HorizontalAlignment="Left"/>
                    <ProgressBar IsIndeterminate="True" Width="400" Height="8" HorizontalAlignment="Left"/>
                    <ProgressRing IsActive="True" Width="36" Height="36" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Input Controls" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBox PlaceholderText="Enter text here..." Width="200" Header="Name"/>
                        <PasswordBox PlaceholderText="Password" Width="160" Header="Password"/>
                    </StackPanel>
                    <ComboBox Header="Color" SelectedIndex="{Binding SelectedColorIndex, Mode=TwoWay}" Width="160">
                        <ComboBoxItem Content="Red"/>
                        <ComboBoxItem Content="Blue"/>
                        <ComboBoxItem Content="Green"/>
                        <ComboBoxItem Content="Purple"/>
                        <ComboBoxItem Content="Orange"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Buttons &amp; Actions" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Primary" Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Default"/>
                        <DropDownButton Content="Options">
                            <DropDownButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit"/>
                                    <MenuFlyoutItem Text="Duplicate"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Delete" Foreground="#F87171"/>
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
